	; rdfs:label "Documentation" 
	; api:defaultFormatter dgfr:DocFormatter
	; api:uriTemplate "/" 
    ; api:selector
        [ api:where "?item a <http://rdfs.org/ns/void#Dataset>  ."
        ]
	.


#Viewers

dgfr:datasetNormal
  a api:Viewer ;
  api:name "Normal" ;
  api:properties "label,landing_page,description,created,modified,distribution.label,distribution.dgfr_format,publisher,publisher.label,reuse,reuse.label,reuse.local_url,reuse.url" ;
  .
  
dgfr:datasetResources
  a api:Viewer ;
  api:include dgfr:datasetNormal ;
  api:name "Resources" ;
  api:properties "distribution.downloads,distribution.description,distribution.issued,distribution.modified,distribution.download_url,distribution.byte_size" ;
  .

dgfr:datasetStats
	a api:Viewer ;
	api:include dgfr:datasetNormal ;
	api:name "Statistics" ;
	api:properties "reuses,unique_visitors,views,visits,hits,issues,followers,reuse.unique_visitors,reuse.views"
	.

dgfr:resourceNormal
	a api:Viewer ;
	api:name "Normal" ;
	api:properties "label,description,id,issued,byte_size,media_type,modified,downloads,download_url,dgfr_format,dataset,dataset.label"
	.
	
dgfr:organizationNormal
  a api:Viewer ;
  api:name "Normal" ;
  api:properties "label,created" 
  .
  dgfr:organizationDatasetsSimple  a api:Viewer ;  api:include dgfr:organizationNormal ;  api:name "Datasets (simple)" ;  api:properties "description,published,published.label,published.landing_page,published.type,datasets" ;  . dgfr:organizationDatasetsDetails  a api:Viewer ;  api:include dgfr:organizationDatasetsSimple ;  api:name "Datasets (details)" ;  api:properties "published.reuses,published.followers,published.downloads"   .

dgfr:reuseSimple 
	a api:Viewer ;
	api:name "Reuse normal view" ;
	api:properties "label,created,url,local_url,derived_from,derived_from.label" .
	
dgfr:reuseStats 
	a api:Viewer ;
	api:include dgfr:reuseSimple  ;
	api:name "Reuse (stats)" ;
	api:properties "unique_visitors,views,visits,hits,followers,datasets,derived_from.url,derived_from.publisher" .


#
# This XSLT formatter produces rich HTML from the viewer properties.
#

dgfr:HtmlFormatter a api:XsltFormatter 
	; api:name "html" 
	; api:mimeType "text/html; charset=utf-8" 
	; api:stylesheet "lda-assets/xslt/result-osm-trimmed-dgfr.xsl"
	# ; elda:shortnameMode elda:roundTrip
	.
	
dgfr:CsvFormatter a api:XsltFormatter ;
  api:name "csv" ;
  rdfs:label "CSV" ;
  api:stylesheet "lda-assets/xslt/csv.xsl" ;
  api:mimeType "text/csv" .
  
dgfr:DocFormatter a api:XsltFormatter 
	; api:name "doc" 
	; api:mimeType "text/html; charset=utf-8" 
	; api:stylesheet "lda-assets/xslt/dgfr-doc-fr.xsl"
	# ; elda:shortnameMode elda:roundTrip
	.

dcat:Dataset a rdfs:Class ;
api:label "Dataset" .

dcat:Distribution a rdfs:Class ;
api:label "Distribution" .

dct:modified a rdf:Property ;
rdfs:domain rdfs:Resource ;
rdfs:range xsd:dateTime ;
api:label "modified" .

dct:created a rdf:Property ;
rdfs:domain rdfs:Resource ;
rdfs:range xsd:dateTime ;
api:label "created" .

dct:description a rdf:Property ;
rdfs:domain rdfs:Resource ;
rdfs:range xsd:string ;
api:label "description" .

dct:identifier a rdf:Property ;
rdfs:domain rdfs:Resource ;
rdfs:range xsd:string ;
api:label "id" .

dct:title a rdf:Property ;
rdfs:range xsd:string ;
api:label "title" .

dct:issued a rdf:Property ;
rdfs:range xsd:dateTime ;
rdfs:domain rdfs:Resource ;
api:label "issued" .

dct:publisher a rdf:Property ;
rdfs:domain rdfs:Resource ;
api:label "publisher" .

dcat:distribution api:label "distribution" .
dcat:Distribution api:label "Distribution" .
dcat:landingPage api:label "landing_page" .
dcat:downloadUrl api:label "download_url" .
dcat:byteSize api:label "byte_size" ;
	rdfs:range xsd:int .
dcat:mediaType api:label "media_type" .
rdfs:label api:label "label" ; api:multiValued true .

#FOAF

foaf:Organization a rdfs:Class ;
	api:label "Organization" .
foaf:depiction a rdf:Property ;
	api:label "depiction" ;
	rdfs:domain foaf:Agent .
	
#Schema.org

schema:url a rdf:Property ;
api:label "url" ;
rdfs:label "URL" .
	
#PROV

prov:wasDerivedFrom a rdf:Property ;
	api:label "derived_from" ;
	rdfs:label "Derived from" ;
	rdfs:range dcat:Dataset .
	
prov:hadDerivation a rdf:Property ;
	api:label "reuse" ;
	rdfs:label "Reuse" ;
	rdfs:range dgfr:Reuse .

#DGFR classes
dgfr:Reuse a rdfs:Class ;
api:label "Reuse" .

 
#DGFR properties
dgfr:checksumType    <http://purl.org/linked-data/api/vocab#label> "checksum_type" ;    a rdf:Property ;    rdfs:domain dcat:Distribution ;    rdfs:label "Checksum type" ;    rdfs:range xsd:string .dgfr:checksumValue    <http://purl.org/linked-data/api/vocab#label> "checksum_value" ;    a rdf:Property ;    rdfs:domain dcat:Distribution ;    rdfs:label "Checksum value" ;    rdfs:range xsd:string .dgfr:dataset    <http://purl.org/linked-data/api/vocab#label> "dataset" ;    a rdf:Property ;    rdfs:domain dcat:Distribution ;    rdfs:label "Dataset" ;    rdfs:range dcat:Dataset .dgfr:datasets    <http://purl.org/linked-data/api/vocab#label> "datasets" ;    a rdf:Property ;    rdfs:domain dgfr:Reuse, foaf:Organization ;    rdfs:label "Datasets" ;    rdfs:range xsd:integer .dgfr:downloads    <http://purl.org/linked-data/api/vocab#label> "downloads" ;    a rdf:Property ;    rdfs:domain dcat:Distribution ;    rdfs:label "Downloads" ;    rdfs:range xsd:integer .dgfr:featured    <http://purl.org/linked-data/api/vocab#label> "featured" ;    a rdf:Property ;    rdfs:domain dcat:Dataset ;    rdfs:label "Featured" ;    rdfs:range xsd:boolean .dgfr:followers    <http://purl.org/linked-data/api/vocab#label> "followers" ;    a rdf:Property ;    rdfs:domain dcat:Dataset, foaf:Organization ;    rdfs:label "Followers" ;    rdfs:range xsd:integer .dgfr:format    <http://purl.org/linked-data/api/vocab#label> "dgfr_format" ;    a rdf:Property ;    rdfs:domain dcat:Distribution ;    rdfs:label "Format" ;    rdfs:range xsd:string .dgfr:hasMadeReuses    <http://purl.org/linked-data/api/vocab#label> "has_made_reuses" ;    a rdf:Property ;    rdfs:domain foaf:Organization ;    rdfs:label "Has made reuses" ;    rdfs:range xsd:integer .dgfr:hits    <http://purl.org/linked-data/api/vocab#label> "hits" ;    a rdf:Property ;    rdfs:domain dcat:Dataset, foaf:Organization ;    rdfs:label "Hits" ;    rdfs:range xsd:integer .dgfr:issues    <http://purl.org/linked-data/api/vocab#label> "issues" ;    a rdf:Property ;    rdfs:domain dcat:Dataset ;    rdfs:label "Issues" ;    rdfs:range xsd:integer .dgfr:members    <http://purl.org/linked-data/api/vocab#label> "members" ;    a rdf:Property ;    rdfs:domain foaf:Organization ;    rdfs:label "Members" ;    rdfs:range xsd:integer .dgfr:private    <http://purl.org/linked-data/api/vocab#label> "private" ;    a rdf:Property ;    rdfs:domain dcat:Dataset ;    rdfs:label "Private" ;    rdfs:range xsd:boolean .dgfr:publicService    <http://purl.org/linked-data/api/vocab#label> "public_service" ;    a rdf:Property ;    rdfs:domain foaf:Organization ;    rdfs:label "Public service" ;    rdfs:range xsd:boolean .dgfr:published    <http://purl.org/linked-data/api/vocab#label> "published" ;    a rdf:Property ;    rdfs:domain foaf:Agent ;    rdfs:label "Published" ;    rdfs:range dgfr:Reuse, dcat:Dataset .dgfr:reuses    <http://purl.org/linked-data/api/vocab#label> "reuses" ;    a rdf:Property ;    rdfs:domain dcat:Dataset, foaf:Organization ;    rdfs:label "Reuses" ;    rdfs:range xsd:integer .   dgfr:localUrl	<http://purl.org/linked-data/api/vocab#label> "local_url" ;	a rdf:Property ;	rdfs:label "Local URL" ;	rdfs:domain dgfr:Reuse . dgfr:slug    <http://purl.org/linked-data/api/vocab#label> "slug" ;    a rdf:Property ;    rdfs:domain dgfr:Reuse, dcat:Dataset, foaf:Organization ;    rdfs:label "Slug" ;    rdfs:range xsd:string .dgfr:type    <http://purl.org/linked-data/api/vocab#label> "dgfr_type" ;    a rdf:Property ;    rdfs:domain dcat:Distribution ;    rdfs:label "Type" ;    rdfs:range xsd:string .dgfr:uniqueVisitors    <http://purl.org/linked-data/api/vocab#label> "unique_visitors" ;    a rdf:Property ;    rdfs:domain dcat:Dataset, foaf:Organization ;    rdfs:label "Unique visitors" ;    rdfs:range xsd:integer .dgfr:views    <http://purl.org/linked-data/api/vocab#label> "views" ;    a rdf:Property ;    rdfs:domain dcat:Dataset, foaf:Organization ;    rdfs:label "Views" ;    rdfs:range xsd:integer .dgfr:visits    <http://purl.org/linked-data/api/vocab#label> "visits" ;    a rdf:Property ;    rdfs:domain dcat:Dataset, foaf:Organization ;    rdfs:label "Visits" ;    rdfs:range xsd:integer .
